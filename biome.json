{
  "javascript": {
    "formatter": {
      "indentStyle": "space",
      "indentWidth": 2,
      "jsxQuoteStyle": "single",
      "quoteStyle": "single",
      "trailingCommas": "es5",
      "lineWidth": 119,
      "semicolons": "asNeeded"
    }
  },
  "json": {
    "formatter": {
      "indentStyle": "space",
      "indentWidth": 2
    }
  },
  "linter": {
    "rules": {
      "a11y": {
        "useButtonType": "off"
      },
      "correctness": {
        "useExhaustiveDependencies": "off",
        "noVoidTypeReturn": "off"
      }
    }
  }
}
